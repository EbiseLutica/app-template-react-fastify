{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "dist",
      "node_modules",
      ".pnpm-store",
      "src/client/routeTree.gen.ts"
    ]
  },
  "javascript": {
    "jsxRuntime": "reactClassic",
    "formatter": {
      "indentStyle": "space",
      "semicolons": "always",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
