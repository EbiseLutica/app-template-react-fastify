{
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev:backend": "tsx --watch src/index.ts --dev",
    "dev:frontend": "vite",
    "dev:css": "hcm --watch src/**/*.module.{css,scss}",
    "dev": "run-p dev:*",
    "build:frontend": "vite build",
    "build:css": "hcm src/**/*.module.{css,scss}",
    "build": "run-s build:css build:frontend",
    "lint": "biome lint",
    "format": "biome format --write"
  },
  "dependencies": {
    "@fastify/view": "^9.1.0",
    "@tanstack/react-router": "^1.114.13",
    "ejs": "^3.1.10",
    "fastify": "^4.24.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@tanstack/router-devtools": "^1.114.13",
    "@tanstack/router-plugin": "^1.114.13",
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.5.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.4.1",
    "tsx": "^4.19.0",
    "vite": "^5.4.2",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  }
}
